<%= form_with model: task do |form| %>
  <div class="flex gap-1">
    <%= form.text_field :description, placeholder: "What needs to be done?",
                        data: {
                          controller: "autofocus-input"
                        },
                        class: "text-xl placeholder:italic placeholder:text-slate-400 placeholder:font-thin inline-block rounded-t-md border-0 outline-none px-3 py-2 grow overflow-hidden shadow-inner" %>
    <%= form.submit "Add", class: "btn rounded-none rounded-tr-md bg-white text-rose-500 hidden" %>
  </div>
<% end %>