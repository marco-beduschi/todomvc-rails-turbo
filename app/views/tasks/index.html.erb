<h1 class="text-8xl text-center text-rose-400 font-thin mb-4">todos</h1>
<div class="bg-white rounded shadow-md">
  <section>
    <%= turbo_frame_tag "new-task" do %>
      <%= render "form", task: @task %>
    <% end %>
    <div class="border-t-[1px]">
      <h1 class="sr-only">Tasks</h1>

      <ul id="tasks">
        <%= render @tasks %>
      </ul>
    </div>
  </section>
  <footer class="relative h-[80px] py-2 px-4 sm:h-[40px] text-slate-400">
    <%= render "stats", tasks_to_be_completed_count: @tasks_to_be_completed_count %>
    <ul data-controller="filters" class="absolute inset-x-0 bottom-[7px] flex flex-row gap-2 justify-center">
      <li>
        <%= link_to("All", tasks_path, class: "filter-btn #{!params[:completed] && 'border-rose-300'}") %>
      </li>
      <li>z
        <%= link_to("Active", tasks_path(completed: false), class: "filter-btn #{params[:completed] == 'false' && 'border-rose-300'}") %>
      </li>
      <li>
        <%= link_to("Completed", tasks_path(completed: true), class: "filter-btn #{params[:completed] == 'true' && 'border-rose-300'}") %>
      </li>
    </ul>
    <button class="float-right">Clear Completed</button>
  </footer>
</div>
