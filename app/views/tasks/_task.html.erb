<div class="flex flex-row justify-between p-1 sm:p-2">
  <%= form_with(model: task, class:"text-lg flex") do |form| %>
    <%= form.check_box :completed,
                       data: {
                         id: task.id,
                         action: "tasks#toggle"
                       },
                       class: "checkbox" %>
    <%= task.description %>
  <% end %>
  <div class="shrink-0">
    <%= link_to "Edit", edit_task_path(task),
                class: "btn bg-gray-100"
    %>
    <div class="inline-block ml-1">
      <%= button_to "Delete", task_path(task),
                    method: :delete,
                    data: { action: "tasks#delete" },
                    class: "btn bg-red-100" %>
    </div>
  </div>
</div>