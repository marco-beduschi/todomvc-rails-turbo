<%= turbo_frame_tag @task do %>
    <%= form_with(model: @task, class: "flex flex-col px-1 py-2 gap-2 sm:px-2 sm:py-3") do |form| %>
    <div class="flex flex-row gap-1 sm:gap-2">
      <%= form.check_box :completed, disabled: true, class: "checkbox" %>
      <%= form.text_area :description, placeholder: "What needs to be done?", autofocus: true, class: "text-xl placeholder:italic placeholder:text-slate-400 placeholder:font-thin inline-block border-slate-300 grow" %>
    </div>
      <div class="flex justify-end gap-2">
        <%= link_to "Cancel", tasks_path, class: "btn bg-white text-slate-800 bg-slate-100" %>
        <%= form.submit "Save", class: "btn bg-white text-white bg-rose-500" %>
      </div>
    <% end %>
<% end %>